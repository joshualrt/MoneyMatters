<h1>Listing reimbursements</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Studentid</th>
      <th>Email</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reimbursements.each do |reimbursement| %>
      <tr>
        <td><%= reimbursement.name %></td>
        <td><%= reimbursement.studentid %></td>
        <td><%= reimbursement.email %></td>
        <td><%= reimbursement.amount %></td>
        <td><%= reimbursement.description %></td>
        <td><%= link_to 'Show', reimbursement, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_reimbursement_path(reimbursement), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', reimbursement, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reimbursement', new_reimbursement_path, class: "btn btn-link" %>
